@using lab1.Models
@model Modify
@{
    ViewData["Title"] = "Planer";
}

@using (Html.BeginForm("SetAssignmentFromModify", "Home"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="align-middle text-center">
        
        <h3>Czego @Model.teacher uczy @Model.group?</h3>
        @Html.DropDownListFor(Model=>Model.subject, new SelectList(ViewBag.subjectList), new {htmlAttributes =
    new {@class = "form-control" }})
        <button name="slotid" class="btn btn-primary" type="submit" value=@Model.slotid>zapisz</button>
        <button name="slotid" class="btn btn-primary" type="submit" value=@Model.slotid asp-action="Index">Anuluj</button>
    </div>
    <input type="hidden" name="what" value=@Model.what >
    <input type="hidden" name="selectedItem" value=@Model.selectedItem >
    <input type="hidden" name="toModify" value=@Model.toModify >
    @Html.HiddenFor(m=>m.teacher)
}